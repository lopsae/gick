#!/bin/bash

# Prints the first matching file from the git status

if [ $# -le 0 ]; then
	echo "No file found" >&2
	exit 1
fi

found=`git status --porcelain | cut -c 4- | grep --max-count 1 $@`
if [ $? -ne 0 ]; then
	exit 1
fi

relativePath=`git rev-parse --show-cdup`
echo "${relativePath}${found}"

