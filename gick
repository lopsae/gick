#!/bin/bash

# Prints the first matching file from the git status

if [ $# -le 0 ]; then
	echo "No file found" >&2
	exit 1
fi

# --porcelain could be used, but it always displays status from
# the root directory. How can we get the relative path to root?
git status --short | cut -c 4- | grep --max-count 1 $@

