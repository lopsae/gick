
# git aliases
alias gt='git status --short --branch'
alias gtt='git status'
alias gb='git branch -v'
alias gol='git log --graph --decorate --pretty=short --abbrev-commit'
alias gomit='git commit'
alias gull='git pull'
alias gush='git push'
alias ginfo='git remote show origin'
alias getch='git fetch; gt | grep "^##"'
alias gup='git merge $(gracking)'
alias glast='git --no-pager log --pretty=short -n 1'
alias glist='git --no-pager stash list'
alias gtash='git stash -u'

alias guser='git config user.name; git config user.email'
alias gitcheck='ssh -T git@github.com'

# cleanorig
# to clean *.orig files that are created when merging with git mergetool
alias gleanorig='find . -name *.orig -delete'
